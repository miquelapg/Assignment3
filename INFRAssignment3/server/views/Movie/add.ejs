<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Movie Title</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Movie Title" name="Name" required>
                </div>
                <div class="form-group">
                    <label for="genreTextField">Genre</label>
                    <input type="text" class="form-control" id="genreTextField" placeholder="Enter the Genre" name="Genre" required>
                </div>
                <div class="form-group">
                    <label for="yearTextField">Year</label>
                    <input type="text" class="form-control" id="yearTextField" placeholder="Enter the Release Year" name="Year" required>
                </div>
                <div class="form-group">
                    <label for="reviewTextArea">Review</label>
                    <textarea type="text" class="form-control" id="reviewTextArea"  placeholder="Enter your Review" name="Review" required></textarea>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>

<%- include Partials/footer.ejs%>